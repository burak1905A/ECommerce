@model UpdateUserViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
        </div>
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">User</h4>

                        <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                            <h4 class="title">About User</h4>
                            <div class="row">
                                <div class="col-lg-12 col-12 mb-30">
                                    <input asp-for="FirstName" class="form-control" type="text" placeholder="First Name *">
                                </div>
                                <br />
                                <div class="col-lg-12 col-12 mb-30">
                                    <input asp-for="LastName" class="form-control" type="text" placeholder="Last Name *">
                                </div>
                                <br />
                                <div class="col-lg-12 col-12 mb-30">
                                    <input asp-for="Email" class="form-control" type="text" placeholder="Email Address *">
                                </div>
                                <br />
                                <div class="col-lg-12 col-12 mb-30">
                                    <input asp-for="Title" class="form-control" type="text" placeholder="Title *">
                                </div>
                                <br />
                                <div class="col-lg-12 col-12 mb-30">
                                    <input asp-for="Password" class="form-control" type="text" placeholder="Password *">
                                </div>
                                <br />
                              
                                <div class="col-lg-12 col-12 mb-30">
                                    <label >Is Admin?</label>
                                    <input asp-for="IsAdmin" class="form-control" type="checkbox">
                                </div>
                                <br />
                                <div class="col-lg-12 col-12 mb-30">
                                    <input class="form-control" type="file" name="files">
                                </div>
                            </div>
                            <div class="row">
                                <div class="d-flex flex-wrap justify-content-end col mbn-10">
                                    <button class="button button-outline button-primary mb-10 ml-10 mr-0">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>

