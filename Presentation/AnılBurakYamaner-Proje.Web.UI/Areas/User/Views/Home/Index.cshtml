@model List<ProductViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "_UserLayout";
}
<style>
    .blog-img {
        height: 200px;
    }
</style>

<div class="slider-area">
    <!-- Slider -->
    <div class="block-slider block-slider4">
        <ul class="" id="bxslider-home4">
            <li>
                <img src="~/img/h4-slide.png" alt="Slide">
                <div class="caption-group">
                    <h2 class="caption title">
                        iPhone <span class="primary">6 <strong>Plus</strong></span>
                    </h2>
                    <h4 class="caption subtitle">Dual SIM</h4>
                    <a class="caption button-radius" href="#"><span class="icon"></span>Shop now</a>
                </div>
            </li>
            <li>
                <img src="~/img/h4-slide2.png" alt="Slide">
                <div class="caption-group">
                    <h2 class="caption title">
                        by one, get one <span class="primary">50% <strong>off</strong></span>
                    </h2>
                    <h4 class="caption subtitle">school supplies & backpacks.*</h4>
                    <a class="caption button-radius" href="#"><span class="icon"></span>Shop now</a>
                </div>
            </li>
            <li>
                <img src="~/img/h4-slide3.png" alt="Slide">
                <div class="caption-group">
                    <h2 class="caption title">
                        Apple <span class="primary">Store <strong>Ipod</strong></span>
                    </h2>
                    <h4 class="caption subtitle">Select Item</h4>
                    <a class="caption button-radius" href="#"><span class="icon"></span>Shop now</a>
                </div>
            </li>
            <li>
                <img src="~/img/h4-slide4.png" alt="Slide">
                <div class="caption-group">
                    <h2 class="caption title">
                        Apple <span class="primary">Store <strong>Ipod</strong></span>
                    </h2>
                    <h4 class="caption subtitle">& Phone</h4>
                    <a class="caption button-radius" href="#"><span class="icon"></span>Shop now</a>
                </div>
            </li>
        </ul>
    </div>
    <!-- ./Slider -->
</div> <!-- End slider area -->
<div class="col-lg-12">
    <div class="blog-section">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="trending" role="tabpanel" aria-labelledby="trending-tab">
                <div class="blog-items">
                    <div class="row">
                        @foreach (ProductViewModel item in Model)
                        {
                            <div class="col-lg-3">
                                <div class="blog-item">
                                    <div class="blog-img" >
                                        <img style="max-height:100%" src="@item.Barcode" />
                                    </div>
                                    <div class="blog-info">
                                        <h3 class="post-title">
                                            <a asp-controller="Home" asp-action="Post" asp-route-id="@item.Id" title="">@item.Name</a>
                                        </h3>
                                        <ul class="meta">
                                            @*<li>@item.CreatedDate</li>*@
                                            <li><i class="la la-eye"></i>@item.FullName</li>
                                            <form asp-controller="Cart" asp-action="Post" method="post">
                                                <input asp-for="@item.Id" class="form-control" type="text" hidden />
                                                <input asp-for="@item.Price1" class="form-control" type="text" hidden />
                                                <input asp-for="@item.Name" class="form-control" type="text" hidden />
                                                <input asp-for="@item.Barcode" class="form-control" type="text" hidden />
                                            <button type="submit" title="">Add Cart</button>
                                            </form>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
