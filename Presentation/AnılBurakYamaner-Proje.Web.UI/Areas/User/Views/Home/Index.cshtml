@model List<ProductViewModel>
@{
    ViewData["Title"] = "Index";

}
<style>
    .blog-img {
        height: 200px;
    }
</style>

<div class="col-lg-12">
    <div class="blog-section">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="trending" role="tabpanel" aria-labelledby="trending-tab">
                <div class="blog-items">
                    <div class="row">
                        @foreach (ProductViewModel item in Model)
                        {
                            <div class="col-lg-3">
                                <div class="blog-item">
                                    <div class="blog-img" >
                                        <img style="max-height:100%" src="@item.Barcode" />
                                    </div>
                                    <div class="blog-info">
                                        <h3 class="post-title">
                                            <a asp-controller="Home" asp-action="Post" asp-route-id="@item.Id" title="">@item.Name</a>
                                        </h3>
                                        <ul class="meta">
                                            @*<li>@item.CreatedDate</li>*@
                                            <li><i class="la la-eye"></i>@item.FullName</li>
                                            <form asp-controller="Cart" asp-action="Post" method="post">
                                                <input asp-for="@item.Id" class="form-control" type="text" hidden />
                                                <input asp-for="@item.Price1" class="form-control" type="text" hidden />
                                                <input asp-for="@item.Name" class="form-control" type="text" hidden />
                                                <input asp-for="@item.Barcode" class="form-control" type="text" hidden />
                                            <button type="submit" title="">Add Cart</button>
                                            </form>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
